<!DOCTYPE html>
<html lang='en'>

<head>
    <meta charset='UTF-8'>
    <meta name='viewport' content='width=device-width, initial-scale=1.0'>
    <link rel='stylesheet' href='/css/productos.css'>
    <link rel='stylesheet' href='https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css'>
    <title>Productos</title>
</head>
<header>
    <div class='container'>
        <div class='logo'>
            <h1>Productos</h1>
        </div>
        <nav>
            <ul class='right-links'>
                <li><a href='/'>Inicio</a></li>
                <li><a href='/real-time-products'>Productos en Vivo</a></li>
                <li><a href='/chat'>Chat</a></li>
            </ul>
        </nav>
    </div>
</header>

<div>
    <h3>Lista de productos:</h3>

    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Título</th>
                <th>Descripción</th>
                <th>Precio</th>
                <th>Código</th>
                <th>Stock</th>
                <th>category</th>
                <th>status</th>
                <th>Imagen</th>
            </tr>
        </thead>
        <tbody>
            {{#each productos}}
            <tr>
                <td>{{this._id}}</td>
                <td>{{this.title}}</td>
                <td>{{this.description}}</td>
                <td>{{this.price}}</td>
                <td>{{this.code}}</td>
                <td>{{this.stock}}</td>
                <td>{{this.category}}</td>
                <td>
                    {{#if this.status}}
                    Activo
                    {{else}}
                    Desactivado
                    {{/if}}
                </td>
                <td>{{#if this.thumbnails}}
                    <img src="{{this.thumbnails}}">
                </td>
                {{else}}
                No hay imagen
                {{/if}}
            </tr>
            {{/each}}
        </tbody>
    </table>
</div>




</html>